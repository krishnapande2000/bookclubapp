<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
        <include
            layout="@layout/toolbar_layout"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/signout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="200dp"
            app:cardBackgroundColor="#232121">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal" />

                                <View
                                    android:layout_width="7dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <ImageButton
                                    android:id="@+id/editButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/DisplayName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="textPersonName"
                            android:text=""
                            android:textColor="#F8F1F1" />

                        <EditText
                            android:id="@+id/DisplayEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="textPersonName"
                            android:text=""
                            android:textColor="#F7F0F0" />

                        <EditText
                            android:id="@+id/DisplayPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="textPersonName"
                            android:text=""
                            android:textColor="#F7F0F0" />

                        <EditText
                            android:id="@+id/DisplayAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="textPersonName"
                            android:text=""
                            android:textColor="#F5EFEF" />

                </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp"
            android:layout_marginBottom="70dp"
            android:text="@string/sign_out" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/signout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="120dp"
            android:text="Save Changes"
            android:visibility="gone" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/signout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="299dp"
            android:layout_marginRight="299dp"
            android:layout_marginBottom="122dp"
            android:text="Cancel"
            android:visibility="gone" />

</RelativeLayout>